{% extends "key/index.html.twig" %}
{% block title %}Translator{% endblock title %}
{% block content %}
    <header>
        <h1>Upload or Download Translation message files here...</h1>

    </header>
    <main>
        <div class="form_container">
            {{ form_start(uploadForm) }}
             <div>
                {{ form_errors(uploadForm) }}
            </div>

            <div class="upload_form">
                <div>{{ form_row(uploadForm.nl_file) }}</div>
                <div>{{ form_row(uploadForm.en_file) }}</div>
                <div>
                    {{ form_row(uploadForm.upload) }}
                </div>
            </div>
            {{ form_end(uploadForm) }}

        </div>
        <div>
            <ul>
                <li> <p>All Keys in NL</p><a class="a_link"href="{{path("download_file", {'filter': 'nl'})}}"><button>Download</button></a></li>
                <li> <p>All Keys in EN</p><a class="a_link"href="{{path("download_file",  {'filter': 'en'})}}"><button>Download</button></a></li>
                {% for domain in domains %}
                <li><p>All {{ domain.domainName }} Keys in NL</p> <a class="a_link"href="{{path("download_file",  {'filter': domain.domainName~'_nl'})}}"><button>Download</button></a></li>
                <li> <p>All {{ domain.domainName }} Keys in EN</p><a class="a_link"href="{{path("download_file",  {'filter': domain.domainName~'_en'})}}"><button>Download</button></a></li>
                {% endfor %}
            </ul>

        </div>

        <div>
            <a class="a_link"href="{{path("index_keys")}}"><button>Back</button></a>
        </div>
    </main>
{% endblock content %}
