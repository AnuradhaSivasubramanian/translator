{% extends "key/index.html.twig" %}
{% block title %}Edit or Add{% endblock title %}
{% block content %}
		<header>
			<h1>{{mode == 'new' ? 'Add New Key' : 'Modify Key'}}</h1>
		</header>
		<main>
			{{ form_start(formdata) }}
			<div>
				{{ form_errors(formdata) }}
			</div>

			<div class="form_container">
				<div>
					{{ form_label(formdata.text_key, 'Translation Key') }}
					{{ form_widget(formdata.text_key) }}
				</div>

				<div>
					{% for translationmessage in formdata.translationmessages %}
						<p>
							{{form_label(translationmessage.message, translationmessage.language.vars.value)}}
							{{ form_widget(translationmessage.message) }}</p>
					{% endfor %}
				</div>
				<div>
					{{ form_row(formdata.domains) }}
				</div>
				<div>
					{{ form_row(formdata.submit) }}
				</div>
			</div>
			{%  do formdata.translationmessages.setRendered %}
			{{ form_end(formdata) }}
			<div>
				<a class="a_link"href="{{path("index_keys")}}"><button>Back</button></a>
			</div>
		</main>
{% endblock content %}
